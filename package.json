{
  "name": "kraken-structure",
  "version": "0.0.1",
  "root": true,
  "scripts": {
    "build:development": "webpack --config ./config/webpack.config.js --env=development --progress --profile --colors",
    "build:production": "webpack --config ./config/webpack-production.config.js --env=production --progress --profile --colors",
    "lint": "./node_modules/.bin/eslint --format codeframe ./{server,app,config}/**/*{config,''}.js",
    "pre-push-lint": "npm run -s lint || exit 1",
    "postinstall": "npm run build:production",
    "start": "node server"
  },
  "dependencies": {
    "css-loader": "^0.28.0",
    "express": "^4.14.1",
    "html-webpack-plugin": "^2.28.0",
    "node-sass": "^4.5.2",
    "sass-loader": "^6.0.3",
    "style-loader": "^0.16.1",
    "webpack": "^2.2.1",
    "webpack-dev-middleware": "^1.10.0",
    "webpack-hot-middleware": "^2.16.1"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-preset-latest": "^6.22.0",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.9.0",
    "pre-push": "^0.1.1"
  },
  "pre-push": {
    "run": "pre-push-lint",
    "colors": true,
    "silent": true
  },
  "engines": {
    "node": ">8.6.x"
  }
}
